<div class="container">
  <div class="row">
    <div class="panel panel-default col-centered">
      <div class="panel-heading">
        <h3>Sign up</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :last_name%><br />
            <%= f.text_field :last_name, autocomplete: "off", class: "form-control"%>
          </div>
          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="field form-group">
            <%= f.label :birth_date %><br />
            <%= f.date_field :birth_date, class: "form-control" %>
          </div>
          <div class="field form-group dropdown">
            <%= f.label :gender %><br />
            <%= f.select :gender, User::GENDERS, {prompt: 'Please Select'}, {class: "dropdown-toggle form-control"} %>
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-success form-control" %>
          </div>
        <% end %>
      <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
