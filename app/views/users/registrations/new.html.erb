<% title 'Sign Up' %>
<div class='container'>
  <div class='row'>
    <div class='panel panel-default col-centered'>
      <div class='panel-heading'>
        <h1>Sign Up</h1>
      </div>
      <div class='panel-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class='row'>
            <div class='col-md-6'>
              <div class='field form-group'>
                <%= f.label :first_name, 'First Name' %>
                <%= f.text_field :first_name, maxlength: 50, required: true, autocomplete: 'off', class: 'form-control' %>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='field form-group'>
                <%= f.label :last_name, 'Last Name' %>
                <%= f.text_field :last_name, maxlength: 50, required: true, autocomplete: 'off', class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='field form-group'>
            <%= f.label :email %>
            <%= f.email_field :email, required: true, maxlength: 50, autofocus: true, class: 'form-control' %>
          </div>

          <div class='field form-group'>
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, required: true, maxlength: 50, autocomplete: 'off', class: 'form-control' %>
          </div>

          <div class='field form-group'>
            <%= f.label :password_confirmation, 'Confirm Password' %>
            <%= f.password_field :password_confirmation, required: true, maxlength: 50, autocomplete: 'off', class: 'form-control' %>
          </div>

          <div class='row'>
            <div class='col-md-6'>
              <div class='field form-group'>
                <%= f.label :birth_date, 'Date of Birth' %>
                <%= f.date_field :birth_date, class: 'form-control' %>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='field form-group dropdown'>
                <%= f.label :gender %>
                <%= f.select :gender, User::GENDERS, { prompt: 'Please Select' }, { class: 'dropdown-toggle form-control' } %>
              </div>
            </div>
          </div>

          <div class='actions'>
            <%= f.submit 'Sign Up', class: 'btn btn-success form-control' %>
          </div>
        <% end %>
      <%= render 'users/shared/links' %>
      </div>
    </div>
  </div>
</div>
