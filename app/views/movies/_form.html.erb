<%= nested_form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.cktext_area :description %>
  </div>
  <div class="field">
    <%= f.label :trailer_url %><br>
    <%= f.text_area :trailer_url %>
  </div>
  <div class="field">
    <%= f.label :featured %><br>
    <%= f.check_box :featured %>
  </div>

  <div class="field">
    <%= f.label :approved %><br>
    <%= f.check_box :approved %>
  </div>

  <div class="field">
    <%= f.label :posters %>
    <div>
      <%= f.fields_for :attachments do |attachment_form| %>
        <%= attachment_form.file_field :image %>
        <%= attachment_form.link_to_remove "Remove this attachment" %>
      <% end %>
    </div>
    <div>
      <%= f.link_to_add "Add an attachment", :attachments %>
    </div>
  </div>

  <div class="field">
    <%= f.label :actors %>
    <%= f.select :actor_ids,@actors_list, {}, {multiple: true} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
