<% movies.in_groups_of(4, false).each do |movie_group| %>
  <div class='row'>
    <% movie_group.each do |movie| %>
      <div class='col-sm-3 large-font'>
        <%= link_to image_tag(movie.image_path, class: 'img-responsive'), movie %>
        <div class='bold large-font initial-align'>
          <%= movie.title %>
        </div>
        <% if top %>
          <div class='small-text'>
            <i>Average Rating: <%= Rating.average(movie.id) %></i>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr/>
<% end %>

<%= render partial:'shared/pagination', locals: { resources: movies } %>
