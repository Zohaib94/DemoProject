<div class='container'>
  <div class='row'>
    <div class='panel panel-default col-centered'>
      <div class='panel-heading'>
        <h1>Edit <%= resource_name.to_s.humanize %></h1>
      </div>
      <div class='panel-body'>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class='field form-group'>
            <%= f.label :first_name, 'First Name' %>
            <%= f.text_field :first_name, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class='field form-group'>
            <%= f.label :last_name, 'Last Name' %>
            <%= f.text_field :last_name, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class='field form-group'>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class='field form-group'>
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class='field form-group'>
            <%= f.label :password_confirmation, 'Confirm Password' %>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class='field form-group'>
            <%= f.label :current_password, 'Current Password' %> <i>(we need your current password to confirm your changes)</i>
            <%= f.password_field :current_password, autocomplete: 'off', required: true, class: 'form-control' %>
          </div>
          <div class='field form-group dropdown'>
            <%= f.label :birth_date, 'Birth Date' %>
            <%= f.date_field :birth_date, class: 'form-control' %>
          </div>
          <div class='field form-group'>
            <%= f.label :gender %>
            <%= f.select :gender, options_for_select(User::GENDERS), { prompt: 'Please Select' }, { class: 'dropdown-toggle form-control' } %>
          </div>
          <div class='field form-group'>
            <div>
              <%= image_tag resource.profile_picture_path(:thumb) %>
            </div>
            <%= f.label :attachment, 'Profile Picture' %>
              <%= f.fields_for :attachment, get_attachment_object(resource) do |image_form| %>
              <%= image_form.file_field :image %>
            <% end %>
          </div>
          <div class='actions'>
            <%= f.submit 'Update', class: 'btn btn-success form-control' %>
          </div>
        <% end %>
        <%= link_to 'Back', :back, class: 'btn btn-default form-control margin' %>
        <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-default col-centered form-control margin' %>
      </div>
    </div>
  </div>
</div>
